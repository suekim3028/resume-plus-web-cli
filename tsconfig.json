{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@design-system": ["src/design-system"],
      "@queries": ["src/queries"],
      "@public/*": ["./public/*"],
      "@constants": ["src/constants"],
      "@store": ["src/store"],
      "@hooks": ["src/hooks"],
      "@types": ["src/types"],
      "@libs": ["src/libs"],
      "@logger": ["src/logger"],
      "@storage": ["src/storage"],
      "@components": ["src/components"],
      "@utils": ["src/utils"],
      "@apis": ["src/apis"],
      "@contexts": ["src/contexts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
